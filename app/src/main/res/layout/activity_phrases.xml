<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PhrasesActivity"
        android:background="#FAF414"
        android:orientation="vertical">
        <TextView
                android:layout_marginTop="40dp"
                android:text="hello"
                android:layout_width="match_parent"
                android:layout_height="617dp" android:id="@+id/textView"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Button"
                android:fontFamily="sans-serif" android:typeface="normal"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="50sp"
                android:textColor="#000" android:textAlignment="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/linearLayout2"
                android:layout_marginBottom="20dp">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@mipmap/speech"
                        android:id="@+id/speech" android:layout_weight="1"
                        android:background="@android:color/transparent"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@mipmap/wh"
                        android:id="@+id/wh" android:layout_weight="1"
                        android:background="@android:color/transparent"/>
        </LinearLayout>
        <Button
                style="?android:attr/buttonBarButtonStyle"
                android:text="Home"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:id="@+id/home"
                android:textSize="50sp"
                android:background="#3a3a3a"/>
</LinearLayout>